################# Header: Define the base system you want to use ################
# Reference of the kind of base you want to use (e.g., docker, debootstrap, shub).
Bootstrap: docker
# Select the docker image you want to use 
From: nvidia/cuda:11.6.2-cudnn8-devel-ubuntu20.04

################# Section: Defining the system ################################# 
# Commands in the %post section are executed within the container.
%post
    # Linux packages
    apt -y update && \
    apt install -y \
    wget \
    git \
    unzip && \
    apt clean && \
    rm -rf /var/lib/apt/lists/*

    # Install conda
    wget -q https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh && \
    bash Miniconda3-latest-Linux-x86_64.sh -b -p /opt/miniconda3 && \
    rm Miniconda3-latest-Linux-x86_64.sh
    . /opt/miniconda3/etc/profile.d/conda.sh

    # Install packages
    conda create --name IWAEhighdim python=3.8
    conda activate IWAEhighdim
    conda install pytorch torchvision torchaudio cudatoolkit=11.6 -c pytorch -c conda-forge
    conda install scipy pandas tqdm matplotlib seaborn python-lmdb
    conda install -c conda-forge pytorch-lightning=1.6.4
    conda install -c conda-forge scikit-learn hydra-core wandb arviz gdown p7zip
    pip install torch-fidelity lpips tfrecord slurm-gpustat hydra-submitit-launcher

    echo ". /opt/miniconda3/etc/profile.d/conda.sh" >> $SINGULARITY_ENVIRONMENT
    echo "conda activate /opt/miniconda3/envs/IWAEhighdim" >> $SINGULARITY_ENVIRONMENT
